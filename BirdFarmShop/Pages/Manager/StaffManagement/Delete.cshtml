                    <span>
                        @Html.DisplayFor(model => model.TblUser.UserAddress)
                    </span>
                </div>
                <div class="text mt-3">
                    <span>
                        @Html.DisplayFor(model => model.TblUser.Email)
                    </span>
                </div>
                <div class="text mt-3">
                    <span>
                        @Html.DisplayFor(model => model.TblUser.UserStatus)
                    </span>
                </div>
                <div class="text mt-3">
                    <span>
                        @Html.DisplayFor(model => model.TblUser.RoleId)
                    </span>
                </div>
                <form method="post" class="d-flex mt-3">
