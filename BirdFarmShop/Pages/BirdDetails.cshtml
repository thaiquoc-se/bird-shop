<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Product detail</title>
    <link rel="stylesheet" href="./order.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/productDetail.css">
</head>
<body>
    <div class="container">
        <div class="col-lg-8 border p-3 main-section bg-white">
            <div class="row hedding m-0 pl-3 pt-0 pb-3">
                Product Detail
            </div>
            <div class="row m-0">
                <div class="col-lg-4 left-side-product-box pb-3">
                    <img src="@Html.DisplayFor(model => model.Bird.Image)" class="border p-3">
                </div>
                <div class="col-lg-8">
                    <div class="right-side-pro-detail border p-3 m-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <span>Name</span>
                                <p class="m-0 p-0"><strong>@Html.DisplayFor(model => model.Bird.BirdName)</strong></p>
                            </div>
                            <div class="col-lg-12">
                                <p class="m-0 p-0 price-pro">@Html.DisplayFor(model => model.Bird.Price)<span>VND</span></p>
                                <hr class="p-0 m-0">
                            </div>
                            <div class="col-lg-12 pt-2">
                                <h5><strong>Bird Detail</strong></h5>
                                <span>
                                    @Html.DisplayFor(model => model.Bird.BirdDescription)
                                </span>
                            </div>
                            <div class="col-lg-12">
                                <p class="tag-section"><strong>Gender : </strong><span>@Html.DisplayFor(model => model.Bird.Gender)</span></p>
                            </div>
                            <div class="col-lg-12">
                                <p class="tag-section"><strong>Weight : </strong><span>@Html.DisplayFor(model => model.Bird.WeightofBirds)</span> <span>g</span></p>
                            </div>
                            <div class="col-lg-12">
                                <h6>Quantity : @Html.DisplayFor(model => model.Bird.Quantity) </h6>
                                
                            </div>
                     
                            <div class="col-lg-12 mt-3">
                                <div class="row">
                                    <div class="col-lg-6 pb-2">
                                        <a asp-page="./Cart" asp-page-handler="addtocart" asp-route-id="@Model.Bird.BirdId" class="btn btn-danger w-100">Add To Cart</a>
                                    </div>
                                    <div class="col-lg-6">
                                        <a asp-page="./ShowAllBirds" class="btn btn-success w-100">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row hedding m-0 pl-3 pt-0 pb-3">
                Comment
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].CommentDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].Content)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].Rating)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.TblComment[0].User)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TblComment)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CommentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Content)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rating)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FullName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="@Model.Bird.BirdId" type="hidden" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Your Comment</label>
                            <textarea asp-for="Comment.Content" class="form-control" placeholder="Enter your comment"></textarea>
                            <span asp-validation-for="Comment.Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comment.Rating" class="control-label"></label>
                            <input asp-for="Comment.Rating" class="form-control" />
                            <span asp-validation-for="Comment.Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Comment" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
