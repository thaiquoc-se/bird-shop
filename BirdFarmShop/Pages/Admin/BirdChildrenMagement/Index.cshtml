@page
@model BirdFarmShop.Pages.Admin.BirdChildrenMagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Modern Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>B<span>ird</span></h3>
        </div>

        <div class="side-content">

            <div class="profile">
                <div class="profile-img bg-img" style="background-image:url(@Model.TblUserDTO.image)"> </div>
                <h4></h4>
                <small>@Model.TblUserDTO.FullName</small>
            </div>
            <div class="side-menu">
                <ul>
                    <li>
                        <a asp-page="/Admin/UserManagement/ShowUserList" class="active">
                            <span><i class="fa-solid fa-user-tie"></i></span>
                            <small>User</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/BirdManagement/ShowListBird">
                            <span><i class="fa-solid fa-kiwi-bird"></i></span>
                            <small>Bird</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/OrderManagement/Index">
                            <span class="las la-shopping-cart"></span>
                            <small>Orders</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/BirdChildrenManagement/Index">
                            <span class="las la-shopping-cart"></span>
                            <small>BirdChildren</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/CommentMagement/Index">
                            <span class="las la-shopping-cart"></span>
                            <small>Comment</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/Dashboard/Chart">
                            <span class="las la-shopping-cart"></span>
                            <small>Chart</small>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">

        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">


                    <div class="user">
                        <div class="bg-img" style="background-image: url(img/1.jpeg)"></div>

                        <span class="las la-power-off"></span>
                        <a class="actions" asp-page="/Logout"><button>Logout</button></a>
                    </div>
                </div>
            </div>
        </header>


        <main>

            <div class="page-header">
                <h1>Admin</h1>
                <small>Home / Dashboard</small>
            </div>

            <div class="page-content">

                <div class="records table-responsive">

                    <div class="record-header">

                        <a asp-page="Create"><button class="btn btn-primary">Create</button></a>
                        <div class="browse">

                        </div>
                    </div>

                    <div>
                        <table width="100%">
                            <thead>
                                <tr>
                                    <th><span class="las la-sort"></span>@Html.DisplayNameFor(model => model.Tblchildrenbird[0].ChildrenBirdId)</th>
                                    <th><span class="las la-sort"></span>@Html.DisplayNameFor(model => model.Tblchildrenbird[0].BirdId)</th>
                                    <th><span class="las la-sort"></span>@Html.DisplayNameFor(model => model.Tblchildrenbird[0].ChildrenBirdName)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.Tblchildrenbird[0].ChildrenBirdOfType)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.Tblchildrenbird[0].Price)</th>

                                    <th><span></span></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.Tblchildrenbird)
                            {
                                <tbody class="list">
                                    <tr class="item">
                                        <td>@Html.DisplayFor(modelItem => item.ChildrenBirdId)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BirdId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChildrenBirdName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChildrenBirdOfType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            <div class="actions">
                                                <a asp-page="./Details" asp-route-id="@item.ChildrenBirdId"><span><i class="fa-solid fa-eye"></i></span></a>
                                                <a asp-page="./Edit" asp-route-id="@item.ChildrenBirdId"><span><i class="fa-solid fa-pen"></i></span></a>
                                                <a asp-page="./Delete" asp-route-id="@item.ChildrenBirdId"><span><i class="fa-solid fa-trash"></i></span></a>
                                            </div>
                                        </td>

                                    </tr>


                                </tbody>
                            }
                        </table>
                    </div>
                    <ul class="listPage">
                    </ul>

                </div>

            </div>

        </main>

    </div>
    <script src="~/js/admin.js"></script>
    <script src="https://kit.fontawesome.com/aadd71a7c7.js" crossorigin="anonymous"></script>
</body>