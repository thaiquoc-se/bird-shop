    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        table thead th {
            padding: 1rem 2rem;
            text-align: center;
            font-size: 21px;
        }

        tbody tr {
            padding: 1rem 1rem;
            text-align: center;
            font-size: 19px;
        }

            tbody tr:hover {
                background-color: #e2ecff
            }

        .side-content ul li:hover {
            border: 2px solid #0d6efd;
            background: #2B384E;
        }
    </style>
</head>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>B<span>ird</span></h3>
        </div>

        <div class="side-content">

            <div class="profile">
                <div class="profile-img bg-img" style="background-image:url(@Model.TblUserDTO.image)"> </div>
                <h4></h4>
                <small>@Model.TblUserDTO.FullName</small>
            </div>
            <div class="side-menu">
                <ul>
                    <li>
                        <a asp-page="/Admin/UserManagement/ShowUserList">
                            <span><i class="fa-solid fa-user-tie"></i></span>
                            <small>User</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/BirdManagement/ShowListBird">
                            <span><i class="fa-solid fa-kiwi-bird"></i></span>
                            <small>Bird</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/OrderManagement/Index">
                            <span class="las la-shopping-cart"></span>
                            <small>Orders</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/BirdChildrenMagement/Index">
                            <span><i class="fa-solid fa-kiwi-bird"></i></span>
                            <small>BirdChildren</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Admin/CommentManagement/Index">
                            <span><i class="fa-solid fa-comment"></i></span>
                            <small>Comment</small>
                        </a>
                    </li>


                    <li>
                        <a asp-page="/Admin/Dashboard/Chart">
                            <span class="las la-shopping-cart"></span>
                            <small>Chart</small>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">

        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">


                    <div class="user">
                        <div class="bg-img" style="background-image: url(img/1.jpeg)"></div>

                        <span class="las la-power-off"></span>
                        <a class="actions" asp-page="/Logout"><button>Logout</button></a>
                    </div>
                </div>
            </div>
        </header>


        <main>

            <div class="page-header">
                <h1>Order Manager</h1>
            </div>

            <div class="page-content">

                <div class="records table-responsive">
                    <div>
                        <table width="100%">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TblOrder[0].OrderId)</th>
                                    @*<th>@Html.DisplayNameFor(model => model.TblOrder[0].ReasonContent)</th>*@
                                    <th>@Html.DisplayNameFor(model => model.TblOrder[0].TypeOrder)</th>
                                    <th> @Html.DisplayNameFor(model => model.TblOrder[0].OrderStatus)</th>
                                    <th> @Html.DisplayNameFor(model => model.TblOrder[0].StartDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.TblOrder[0].EndDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.TblOrder[0].ShipAddress)</th>
                                    <th>Customer Name</th>

                                    <th><span></span></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.TblOrder)
                            {
                                <tbody class="list">
                                    <tr class="item">
                                        <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TypeOrder)
                                        </td>
                                        <td>

                                            @if (item.OrderStatus == "Success")
                                            {
                                                <span style="border-radius: 8px; padding: 8px; font-weight: 700; background-color: #EAFEF3; color: #2ECC71;">Success</span>
                                            }
                                            else if (item.OrderStatus == "Processing")
                                            {
                                                <span style="border-radius: 8px; padding: 8px; font-weight: 700;  background-color: #fff6e5; color: #F4BD50;">Processing</span>
                                            }
                                            else if (item.OrderStatus == "Cancel")
                                            {
                                                <span style="border-radius: 8px; padding: 8px; font-weight: 700;  background-color: #b3a7a8; color: #dc3545;">Cancel</span>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShipAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.FullName)
                                        </td>
                                        <td>
                                            <div class="actions">
                                                @if (item.OrderStatus == "Cancel" || item.OrderStatus == "Success")
                                                {
                                                    <a asp-page="./Details" asp-route-id="@item.OrderId"><span><i class="fa-solid fa-eye"></i></span></a>
                                                }
                                                else
                                                {
                                                    <a style="padding-left:14px;" asp-page="./Details" asp-route-id="@item.OrderId"><span><i class="fa-solid fa-eye"></i></span></a>
                                                    <a style="padding-left:14px;" asp-page="./Cancel" asp-route-id="@item.OrderId"><span><i class="fa-solid fa-rectangle-xmark"></i></span></a>
                                                    <a style="padding-left:14px;" asp-page="./Success" asp-route-id="@item.OrderId"><span><i class="fa-solid fa-circle-check"></i></span></a>
                                                }
                                            </div>
                                        </td>

                                    </tr>


                                </tbody>
                            }
                        </table>
                    </div>
                    <ul class="listPage">
                    </ul>

                </div>

            </div>

        </main>

    </div>
    <script src="~/js/admin.js"></script>
    <script src="https://kit.fontawesome.com/aadd71a7c7.js" crossorigin="anonymous"></script>
</body>