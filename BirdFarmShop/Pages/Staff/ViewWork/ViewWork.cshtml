<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Modern Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>B<span>ird</span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div class="profile-img bg-img" style="background-image:url(@Model.TblUserDTO.image)"> </div>
                <h4></h4>
                <small>@Model.TblUserDTO.FullName</small>
            </div>
            <div class="side-menu">
                <ul>
                    <li>
                        <a asp-page="/Staff/ViewWork/ViewWork">
                            <span><i class="fa-solid fa-kiwi-bird"></i></span>
                            <small>WorkView</small>
                        </a>
                    </li>

                    <li>
                        <a asp-page="/Staff/BirdManagement/Index">
                            <span><i class="fa-solid fa-user-tie"></i></span>
                            <small>Bird</small>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">

        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">
                    <div class="notify-icon">
                        <span class="las la-envelope"></span>
                        <span class="notify">4</span>
                    </div>

                    <div class="notify-icon">
                        <span class="las la-bell"></span>
                        <span class="notify">3</span>
                    </div>

                    <div class="user">
                        <div class="bg-img" style="background-image: url(img/1.jpeg)"></div>

                        <span class="las la-power-off"></span>
                        <a asp-page="/Logout"><button>Logout</button></a>
                    </div>
                </div>
            </div>
        </header>


        <main>

            <div class="page-header">
                <h1>Staff</h1>
                <small>Home / Dashboard</small>
            </div>

            <div class="page-content">

                <div class="records table-responsive">

                    <div class="record-header">

                        <a asp-page="Create"><button class="btn btn-primary">Create</button></a>
                    </div>

                    <div>
                        <table height="100%" width="200%">
                            <thead>
                                <tr>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.TblStaff[0].WorkDescription)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.TblStaff[0].WorkName)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.TblStaff[0].Shift)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.TblStaff[0].WorkStatus)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.TblStaff[0].StartDate)</th>
                                    <th><span class="las la-sort"></span> @Html.DisplayNameFor(model => model.TblStaff[0].EndDate)</th>
                                    <th><span></span></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.TblStaff)
                            {
                                <tbody class="list">
                                    <tr class="item">
                                        <td>
                                            <div class="client">
                                                <div class="client-info">
                                                    <h4>@Html.DisplayFor(modelItem => item.WorkDescription)</h4>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.WorkName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Shift)
                                        </td>
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.WorkStatus)*@
                                            @if (item.WorkStatus == "Success")
                                            {
                                                <span style="border-radius: 8px; padding: 8px; font-weight: 700; background-color: #EAFEF3; color: #2ECC71;">Success</span>
                                            }
                                            else if (item.WorkStatus == "Cancel")
                                            {
                                                <span style="border-radius: 8px; padding: 8px; font-weight: 700;  background-color: #b3a7a8; color: #dc3545;">Cancel</span>
                                            }
                                            else if (item.WorkStatus == "Processing")
                                            {
                                                <span style="border-radius: 8px; padding: 8px; font-weight: 700;  background-color: #fff6e5; color: #F4BD50;">Processing</span>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            <div class="actions">
                                                <a asp-page="./Details" asp-route-id="@item.StaffId"><span><i class="fa-solid fa-eye"></i></span></a>
                                            </div>
                                        </td>
                                    </tr>
                               

                                </tbody>
                            }
                        </table>
                    </div>
                    <ul class="listPage">
                    </ul>

                </div>

            </div>

        </main>

    </div>
    <script src="~/js/admin.js"></script>
    <script src="https://kit.fontawesome.com/aadd71a7c7.js" crossorigin="anonymous"></script>
</body>